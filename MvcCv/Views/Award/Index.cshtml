@using MvcCv.Models.Entity
@model List<TblAward>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{string color = "";}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">

                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">


                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {
                                        if (item.AwardID % 2 == 0)
                                        {
                                            color = "btn btn-primary";
                                        }
                                        else
                                        {
                                            color = "btn btn-success";
                                        }
                                        <div class="time-label">
                                            <a href="/Award/AwardUpdate/@item.AwardID" class="@color">
                                                <span class="@color">
                                                    @item.Date
                                                </span>
                                            </a>
                                        </div>

                                        <div>

                                            <div class="timeline-item">

                                                <div class="timeline-body">
                                                    @item.explanation
                                                </div>

                                            </div>
                                        </div>
                                    }


                                </div>
                                <a href="/Award/AwardAdd" class="btn btn-primary">Sertifika Ekle</a>
                            </div>
                         
                        </div>
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>

    </section>
</body>
</html>